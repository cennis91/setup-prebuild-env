// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/images/tree/main/src/base-debian
{
    "name": "cennis91/setup-prebuild-env",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".",
        "cacheFrom": "ghcr.io/cennis91/setup-prebuild-env/devcontainer:latest"
    },
    "features": {
        "ghcr.io/devcontainers-extra/features/actionlint:1": {},
        "ghcr.io/devcontainers-extra/features/gh-release:1": {
            "repo": "koalaman/shellcheck",
            "binaryNames": "shellcheck",
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/EliiseS/devcontainer-features/devcontainers-cli:1": {}
    },
    "customizations": {
        "devpod": {
            "prebuildRepository": "ghcr.io/cennis91/setup-prebuild-env/devcontainer:latest"
        },
        "jetbrains": {
            "plugins": [
                "org.editorconfig.editorconfigjetbrains",
                "org.jetbrains.plugins.github",
                "org.jetbrains.plugins.yaml"
            ],
            "settings": {}
        },
        "vscode": {
            "extensions": [
                // 0.17.2+ is incompatible with VSCode forks before 1.98.0
                "EditorConfig.EditorConfig@0.17.1",
                "GitHub.vscode-github-actions",
                "redhat.vscode-yaml",
                "timonwong.shellcheck"
            ],
            "settings": {
                "editor.rulers": [
                    80,
                    120
                ],
                "file.associations": {
                    ".env*": "properties",
                    "*.{yml,yaml}": "github-actions-workflow"
                },
                "shellcheck.useWorkspaceRootAsCwd": true,
                "redhat.telemetry.enabled": false,
                "tasks": {
                    "version": "2.0.0",
                    "inputs": [
                        {
                            "id": "exampleJob",
                            "type": "promptString",
                            "description": "Name of the example job to compare",
                            "default": "quick-start"
                        },
                        {
                            "id": "golangConstant",
                            "type": "pickString",
                            "description": "Name of the golang constant to check",
                            "options": [
                                "KNOWN_ARCH",
                                "KNOWN_OS"
                            ],
                            "default": "KNOWN_ARCH"
                        }
                    ],
                    "problemMatcher": [],
                    "tasks": [
                        {
                            "label": "Check Golang Constant",
                            "command": "${workspaceFolder}/.github/scripts/check-golang-constant.sh",
                            "args": [
                                "${input:golangConstant}"
                            ],
                            "group": {
                                "kind": "test"
                            },
                            "isBackground": true,
                            "presentation": {
                                "reveal": "silent",
                                "revealProblems": "onProblem",
                                "close": true
                            }
                        },
                        {
                            "label": "Check README.md Example",
                            "command": "${workspaceFolder}/.github/scripts/check-readme-example.sh",
                            "args": [
                                "README.md",
                                ".github/workflows/ci-examples.yml",
                                "${input:exampleJob}"
                            ],
                            "group": {
                                "kind": "test"
                            },
                            "isBackground": true,
                            "presentation": {
                                "reveal": "silent",
                                "revealProblems": "onProblem",
                                "close": true
                            }
                        },
                        {
                            "label": "devcontainer upgrade",
                            "command": "devcontainer",
                            "args": [
                                "upgrade",
                                "--workspace-folder",
                                "${workspaceFolder}"
                            ],
                            "group": {
                                "kind": "build"
                            },
                            "hide": true,
                            "presentation": {
                                "echo": false,
                                "close": true
                            }
                        },
                        {
                            "label": "Update devcontainer lockfile",
                            "type": "shell",
                            "command": "echo '' >> ${workspaceFolder}/.devcontainer/devcontainer-lock.json",
                            "group": {
                                "kind": "build"
                            },
                            "dependsOn": [
                                "devcontainer upgrade"
                            ],
                            "presentation": {
                                "echo": false,
                                "close": true
                            }
                        }
                    ]
                }
            }
        }
    }
}
